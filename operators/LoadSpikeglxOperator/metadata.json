{
    "name": "LoadSpikeglxOperator",
    "version": "0.1.0",
    "dependency": {
        "docker_base_image": "default",
        "dockerfile": "default",
        "requirements_file": "requirements_1.txt"
    },
    "tags": [
        "SpikeInterface"
    ],
    "style": {
        "node_label": "Load SpikeGLX",
        "icon_class_name": "fas fa-database",
        "target_position": "null",
        "node_style": {
            "backgroundColor": "#b3cde8"
        }
    },
    "input_schema": {
        "title": "OperatorModel",
        "description": "Load SpikeGLX dataset from S3",
        "type": "object",
        "properties": {
            "bucket_name": {
                "title": "Bucket Name",
                "description": "this is the name of the bucket",
                "default": "catalystneuro",
                "type": "string"
            },
            "dataset_path": {
                "title": "Dataset Path",
                "description": "this is the path for the dataset",
                "default": "spikeglx",
                "type": "string"
            },
            "stream_id": {
                "default": "ap",
                "allOf": [
                    {
                        "$ref": "#/definitions/StreamIdType"
                    }
                ]
            },
            "include_results_in_report": {
                "title": "Include Results In Report",
                "default": true,
                "type": "boolean"
            }
        },
        "definitions": {
            "StreamIdType": {
                "title": "StreamIdType",
                "description": "Stream type, defines whether the data comes from lfp or raw signal",
                "enum": [
                    "ap",
                    "lf"
                ],
                "type": "string"
            }
        }
    }
}